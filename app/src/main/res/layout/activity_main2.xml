<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="16dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="zoom in" />

        <Button
            android:id="@+id/btnFadeIn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="fade in" />

        <Button
            android:id="@+id/btnSlideUp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="slide up" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="zoom out" />

        <Button
            android:id="@+id/btnFadeOut"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="fade out" />

        <Button
            android:id="@+id/btnSlideDown"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="slide down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnClockwise"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="clockwise" />

        <Button

            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="" />

        <Button
            android:id="@+id/btnSlideLeft"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="slide left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnCounter"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="counter" />

        <Button

            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="" />

        <Button
            android:id="@+id/btnSlideRight"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="slide right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnBounce"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="bounce" />

        <Button
            android:id="@+id/btnBlink"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="blink" />

        <Button
            android:id="@+id/btnFlip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="flip" />
    </LinearLayout>


</LinearLayout>